    "authors": [ "Tony Hudgins" ],
    "homepage": "https://github.com/Syke94/json.d",
    "license": "MIT",
    "copyright": "Copyright (c) 2014 Tony Hudgins",
    "targetType": "library",
    "targetName": "json",
    "targetPath": "bin",
